<div class="main">
  <div class="container">
    ログイン
    <% if @error_message %>
      <%= @error_message %>
    <% end %>
    <%= form_tag("/login") do %>
      <p>メールアドレス</p>
      <input name="email" value="<%= @email %>">
      <p>パスワード</p>
      <input name="password" type="password" value="<%= @password %>">
      <input type="submit" value="ログイン">
    <% end %>
  </div>
</div>

